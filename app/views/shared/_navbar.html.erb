<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links -->
      <%= link_to 'Ajouter une recette', new_recipe_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Les ingrédients', ingredients_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Ajouter un ingrédient', new_ingredient_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://res.cloudinary.com/dami1a/image/upload/c_scale,h_200/v1550531990/Atelier%20gourmand/Manon.jpg", height: 30, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
<!--             <li>
              <%#= link_to new_registration_path(resource_name) do %>
                <i class="fas fa-user-plus"></i> Sign up
              <%# end %>
            </li>
            <li>
              <%#= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%#= t(".settings", default: "Settings") %>
              <%# end %>
            </li> -->
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Links -->
      <%= link_to 'Les ingrédients', ingredients_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", height: 30, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_user_session_path do %>
                <i class="fa fa-user"></i> <%= t(".sign_in", default: "Log in") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to 'Ajouter une recette', new_recipe_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Les ingrédients', ingredients_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Ajouter un ingrédient', new_ingredient_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% else %>
          <li><%= link_to 'Les ingrédients', ingredients_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
          <li><%= link_to 'Log in', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

